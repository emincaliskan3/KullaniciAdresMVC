@model KullaniciAdresMVC.Models.Kullanici
@{
    ViewBag.Title = "Kullanıcı Detay";
}

<h2>KullaniciDetay</h2>



@if (Model != null) 
{
    <h4>@ViewBag.KullaniciAdSoyad Bilgileri</h4>
    <table class="table table-striped table-hover">
        <tr>
            <td>Ad</td>
            <td>@Model.Ad</td>
        </tr>
        <tr>
            <td>Soyad</td>
            <td>@Model.Soyad</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <td>Kullanıcı Adı</td>
            <td>@Model.KullaniciAdi</td>
        </tr>
        <tr>
            <td>Şifre</td>
            <td>@Model.Sifre</td>
        </tr>
    </table>

    @ViewBag.KullaniciAdSoyad
}
<hr />

<form action="/MVCModelBinding/KullaniciDetay" method="post">
    <table class="table table-striped table-hover">
        
        <tr>
            <td>Ad</td>
            <td>@Html.TextBoxFor(model => model.Ad)</td>
        </tr>
        <tr>
            <td>Soyad</td>
            <td>@Html.TextBoxFor(model => model.Soyad)</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@Html.TextBoxFor(model => model.Email)</td>
        </tr>
        <tr>
            <td>Kullanıcı Adı</td>
            <td>@Html.TextBoxFor(model => model.KullaniciAdi)</td>
        </tr>
        <tr>
            <td>Şifre</td>
            <td>@Html.TextBoxFor(model => model.Sifre)</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Gönder" />
            </td>
        </tr>
    </table>
</form>